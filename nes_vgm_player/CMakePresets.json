{
    "version": 8,
    "configurePresets": [
        {
            "name": "VCPKG",
            "displayName": "VCPKG",
            "description": "Uses VCPKG package manager for finding dependencies",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "${env:VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "msvc-x64",
            "displayName": "Visual Studio Community 2022 Release - amd64",
            "description": "Using compilers for Visual Studio 17 2022 (x64 architecture)",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x64",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "CLang-x86_64-linux",
            "displayName": "Clang 19.1.1 x86_64-pc-linux-gnu",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19"
            }
        },
        {
            "name": "Debug",
            "displayName": "Debug (Clang)",
            "inherits": "CLang-x86_64-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "displayName": "Release (Clang)",
            "inherits": "CLang-x86_64-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-x64-debug",
            "displayName": "Visual Studio Community 2022 Release - amd64 - Debug",
            "configurePreset": "msvc-x64",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "displayName": "CLang - Release",
            "configurePreset": "Release"
        },
        {
            "name": "Debug",
            "displayName": "CLang - Debug",
            "configurePreset": "Debug"
        }
    ]
}